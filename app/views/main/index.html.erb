<%= stylesheet_link_tag "main.scss" %>
<div id = "wrapper">
  <div id = "header">
    <%= link_to "Login" %>
    <%= link_to "Register" %>
  </div>
  <div id = "table_wrapper">
    <p><%= link_to "Create new board", 
      controller: "main",
      action: "newBoard"%></p>
    <table id = "boards">
      <th>Board name</th>
      <th>Statistics</th>
      <th>Last posts</th>
      <% @boards.each do |board| %>
        <tr>  
          <td><%= link_to board.board_name %></td>
          <td> Topics: <%= board.topicks %>
          <br> Posts: <%= board.posts %></td>
          <td> Last post:<%= link_to board.last_poster %></td>
        </tr>  
      <% end %>  
    </table>
  </div>
  <div id = "footer">
    <div class="outside">
      <h3>Forum info</h3>
      <div class="inside"></div>
    </div>
    <div class="outside">
      <h3>Forum statistics</h3>
      <div class="inside"></div>
    </div>
    <div class="outside">
      <h3>Forum population</h3>
      <div class="inside"></div>
    </div>
  </div>
</div>