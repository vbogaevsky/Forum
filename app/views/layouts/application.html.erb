<!DOCTYPE html>
<html>
<head>
  <title>Forum</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id = "header">
    <% if current_user %>
      <h4>
        <%= current_user.handle %> <%= link_to "Log out", logout_path, method: "delete" %>
      </h4>
    <% else %>
      <h5>
        Please, login or <%= link_to "register", '/register' %>.
      </h5>
      <%= form_for(:session, url: login_path) do |f| %>
        <%= f.email_field :email, placeholder: "Email" %>
        <%= f.password_field :password, placeholder: "password" %>
        <%= f.submit "Login", id: "btn-subm" %>
      <% end %> 
    <%end%>  
  </div>
<%= yield %>

</body>
</html>
