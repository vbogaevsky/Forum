<%= stylesheet_link_tag "boards.scss" %>
<div id = "wrapper">
  <div id = "table_wrapper">
    <p><%= link_to "Start new topick", 
      controller: "topicks",
      action: "newTopick"%></p>
    <table id = "topicks">
      <% @topicks.each do |topick| %>
        <tr>  
          <td><%= link_to "#{topick.theme}", topick_path(topick)%></td>
          <td> Last post: <%= topick.posts.last.user.handle%>
          <br> On: <%= topick.posts.last.updated_at %>
          </td>
        </tr>  
      <% end %> 
    </table>
  </div>
  <div id = "footer">
  </div>
</div>